<LinearLayout
android:id="@+id/imageViewGallery_linearLayout"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
android:layout_alignParentRight="true"
android:layout_marginRight="30dp"
android:orientation="vertical"
android:gravity="center_horizontal" >

    <ImageView
    android:id="@+id/imageViewGallery"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/gallery_icon"

    />

    <ImageView

android:layout_width="60dp"
android:layout_height="wrap_content"
android:src="@drawable/gallery_write" />
</LinearLayout>

<LinearLayout
android:id="@+id/imageViewCamera_linearLayout"
android:layout_width="wrap_content"
android:layout_height="wrap_content"

android:layout_alignTop="@id/imageViewGallery_linearLayout"
android:layout_marginLeft="30dp"
android:orientation="vertical"
android:gravity="center_horizontal" >
<ImageView
android:id="@+id/imageViewCamera"
android:layout_width="100dp"
android:layout_height="100dp"
android:src="@drawable/cam_icon" />
<ImageView

android:layout_width="60dp"
android:layout_height="wrap_content"
android:src="@drawable/cam_write" />

</LinearLayout>
